@model DubuisGelin.Models.ChampsViewModel.AddChampsToTableViewModel

@using DubuisGelin.Controllers
@using DubuisGelin.Services.Enums

<h1>Ajouter un champs</h1>

@using (Html.BeginForm(nameof(HomeController.AddChampsToTable), "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(m => m.IdTable)
    @Html.HiddenFor(m => m.Table)
    <div class="form-group">

        <label>Entrez le nom du champs</label>
        <div>
            @Html.EditorFor(m => m.Name)
        </div>
        <label>Choisissez le type du champs</label>
        <div>
            <select asp-for="Type" asp-items="Html.GetEnumSelectList<TypeEnum>()">
                <option selected="selected" value="">Please select</option>
            </select>
        </div>
    </div>
    <div style="display : flex; ">
        <div class="form-group">
            <div class="">
                <input type="submit" class="btn btn-default rounded bg-dark text-white mt-2" value="Créer le champs" />
            </div>
        </div>
    </div>
}