@model DubuisGelin.Models.TableViewModel.TableUserViewModel
@using DubuisGelin.Controllers
<h2>Modifier un champs</h2>

@using (Html.BeginForm(nameof(HomeController.EditChamps), "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Nouveau nom :", null, new { @class = "  control-label font-weight-bold" })
        <div>
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { autofocus = "true" } })
        </div>
    </div>
    @Html.HiddenFor(m => m.Id)
    <div style="display : flex; ">
        <div class="form-group">
            <div class="">
                <input type="submit" class="btn btn-default rounded bg-dark text-white mt-2" value="Rennomer le dossier" />
            </div>
        </div>
    </div>
}