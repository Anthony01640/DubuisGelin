@model DubuisGelin.Models.HomeController.CreateTableViewModel

@using DubuisGelin.Controllers
<h1>Créer une table</h1>

@using (Html.BeginForm(nameof(HomeController.CreateTable), "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(m=>m.IdUser)
    <div class="form-group">
    
    <label>Entrez le nom de la table</label>
    <div>
        @Html.EditorFor(m => m.Nom)
    </div>
</div>
    <div style="display : flex; ">
        <div class="form-group">
            <div class="">
                <input type="submit" class="btn btn-default rounded bg-dark text-white mt-2" value="Créer le dossier" />
            </div>
        </div>
    </div>
}